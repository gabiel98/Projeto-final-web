<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <title>Carrinho</title>
  <link rel="stylesheet" href="/css/cart.css">
</head>
<body>

  <%- include('partials/header') %>

  <main class="cart-container">
    <h1 class="cart-title">Seu Carrinho</h1>

    <% if (!cart || cart.length === 0) { %>
      <p class="cart-empty">Seu carrinho est√° vazio.</p>
    <% } else { %>

      <ul class="cart-list">
        <% cart.forEach(function(item, idx) { %>
          <li class="cart-item">
            <div class="cart-info">
              <strong><%= item.nome %></strong>
              <span class="cart-price"><%= item.preco %></span>
            </div>

            <form action="/cart/remove" method="POST">
              <input type="hidden" name="index" value="<%= idx %>" />
              <button type="submit" class="btn-remove">Remover</button>
            </form>
          </li>
        <% }) %>
      </ul>

    <% } %>

    <a href="/" class="btn-continue">Continuar comprando</a>
  </main>

  <%- include('partials/footer') %>

</body>
</html>
