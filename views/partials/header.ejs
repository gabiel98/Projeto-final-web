<head>
    <link rel="stylesheet" href="/css/partials.css">
</head>
<header class="header">
  <div class="nav-left">
    <a href="/" class="logo">PokeShop</a>

    <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
      <a href="/perfil">Perfil</a>
    <% } %>

    <a href="/cart">Carrinho</a>

    <% if (typeof userRole !== 'undefined' && (userRole === 'dono' || userRole === 'funcionario')) { %>
      <a href="/inventory">Inventário da loja</a>
    <% } %>

    <% if (typeof userRole !== 'undefined' && userRole === 'dono') { %>
      <a href="/users">Gerenciar usuários</a>
    <% } %>
  </div>

  <div class="nav-right">
    <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
      <span>Olá, <strong><%= userName %></strong>
        <% if (typeof userCargo !== 'undefined' && userCargo) { %>
          (<%= userCargo %>)
        <% } %>
      </span>

      <form action="/logout" method="POST">
        <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% } %>
        <button class="btn-sair" type="submit">Sair</button>
      </form>
    <% } else { %>
      <a href="/login" class="btn-login">Login</a>
    <% } %>
  </div>
</header>
