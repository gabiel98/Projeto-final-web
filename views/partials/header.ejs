<header style="background:#222;color:#fff;padding:12px 18px;display:flex;justify-content:space-between;align-items:center;">
  <div style="display:flex;gap:12px;align-items:center;">
    <a href="/" style="color:#fff;text-decoration:none;font-weight:bold;font-size:18px;">PokeShop</a>
    <% if (typeof userName !== 'undefined' && userName) { %>
      <a href="/perfil" style="color:#fff;text-decoration:none;">Perfil</a>
    <% } %>
    <a href="/cart" style="color:#fff;text-decoration:none;">Carrinho</a>
    <% if (typeof userRole !== 'undefined' && (userRole === 'admin' || userRole === 'manager')) { %>
      <a href="/products/new" style="color:#fff;text-decoration:none;">Cadastrar produto</a>
    <% } %>
    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
      <a href="/users" style="color:#fff;text-decoration:none;">Gerenciar usuários</a>
    <% } %>
  </div>
  <div>
    <% if (typeof userName !== 'undefined' && userName) { %>
      <span style="margin-right:12px">Olá, <strong><%= userName %></strong><% if (typeof userCargo !== 'undefined' && userCargo) { %> (<%= userCargo %>)<% } %></span>
      <form action="/logout" method="POST" style="display:inline;">
        <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <% } %>
        <button type="submit">Sair</button>
      </form>
    <% } else { %>
      <a href="/login" style="color:#fff;text-decoration:none;background:#ff6b6b;padding:6px 10px;border-radius:4px;">Login</a>
    <% } %>
  </div>
</header>
